<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:background="#fff"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<LinearLayout
		android:background="#fff"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:textStyle="bold"
			android:layout_marginStart="10dp"
			android:gravity="right|center"
			android:padding="8dp"
		    android:textSize="18dp"
			android:layout_marginEnd="20dp"
			android:textColor="#000000"
			android:text="ACTIVITIES OF SLS"
			android:layout_width="match_parent"
			android:layout_height="55dp">

		</TextView>

	</LinearLayout>


<ScrollView
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:orientation="vertical"
			android:gravity="top|center"
			android:layout_width="match_parent"
			android:layout_height="match_parent">


			<LinearLayout

				android:layout_marginTop="10dp"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
				<RelativeLayout
					android:layout_margin="10dp"
					android:id="@+id/RelativeLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="10dp"
					android:gravity="center_vertical"
					android:orientation="vertical">
					<LinearLayout
						android:background="@drawable/shape"
						android:id="@+id/bg"
						android:layout_width="match_parent"
						android:layout_height="140dp"
						android:layout_marginTop="60dp"
						android:padding="8dp"

						android:gravity="right"
						android:orientation="vertical">
						<TextView
							android:layout_marginTop="10dp"
							android:layout_marginEnd="20dp"
							android:id="@+id/textview1"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="8dp"
							android:paddingRight="8dp"
							android:text="BIOGRAPHY"
							android:textSize="18dp"
							android:textStyle="bold"
							android:textColor="#FFFFFF"/>
						<TextView
							android:id="@+id/textview2"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingRight="8dp"
							android:text=""
							android:textSize="14sp"
							android:textColor="#F1E828"/>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear2"
						android:layout_width="wrap_content"
						android:layout_height="200dp"
						android:gravity="top"
						android:orientation="vertical">
						<ImageView
							android:id="@+id/imageview1"
							android:focusable="false"
							android:layout_width="120dp"
							android:layout_height="150dp"
							android:src="@drawable/man"
							android:scaleType="centerCrop"
							android:layout_gravity="top"/>
						<ImageView
							android:id="@+id/imageview2"
							android:focusable="false"
							android:layout_width="match_parent"
							android:layout_height="40dp"
							android:src="@drawable/man"
							android:scaleType="center"
							android:alpha="0.1"
							android:translationY="-20.0dp"/>
					</LinearLayout>
				</RelativeLayout>
			</LinearLayout>




		</LinearLayout>

		<LinearLayout
			android:layout_margin="10dp"
			android:background="@drawable/shape5"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:layout_margin="8dp"
				android:orientation="horizontal"
				android:layout_weight="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<ImageView
					android:layout_marginStart="10dp"
					android:src="@drawable/writing"
					android:layout_width="80dp"
					android:layout_height="80dp">

				</ImageView>

				<TextView
					android:layout_marginTop="10dp"
					android:layout_marginEnd="20dp"
					android:textSize="18dp"
					android:textColor="#fff"
					android:gravity="right"
					android:textStyle="bold"
					android:text="BASIC ESSAY WRITING"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>



			</LinearLayout>

		</LinearLayout>
		<LinearLayout
			
			android:orientation="vertical"
			android:gravity="top|center"
			android:layout_width="match_parent"
			android:layout_height="match_parent">





		</LinearLayout>
		<LinearLayout
			android:layout_margin="10dp"
			android:background="@drawable/shape9"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:layout_margin="8dp"
				android:orientation="horizontal"
				android:layout_weight="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<ImageView
					android:layout_marginStart="10dp"
					android:src="@drawable/robot"
					android:layout_width="80dp"
					android:layout_height="80dp">

				</ImageView>

				<TextView
					android:layout_marginTop="10dp"
					android:layout_marginEnd="20dp"
					android:textSize="20dp"
					android:textColor="#fff"
					android:gravity="right"
					android:textStyle="bold"
					android:text="SCIENCE FUN"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>



			</LinearLayout>

		</LinearLayout>
		<LinearLayout
			android:layout_margin="10dp"
			android:background="@drawable/shape6"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:layout_margin="8dp"
				android:orientation="horizontal"
				android:layout_weight="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<ImageView
					android:layout_marginStart="10dp"
					android:src="@drawable/computer"
					android:layout_width="80dp"
					android:layout_height="80dp">

				</ImageView>

				<TextView
					android:layout_marginTop="10dp"
					android:layout_marginEnd="20dp"
					android:textSize="20dp"
					android:textColor="#fff"
					android:gravity="right"
					android:textStyle="bold"
					android:text="COMPUTER"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>



			</LinearLayout>

		</LinearLayout>
		<LinearLayout
			android:layout_margin="10dp"
			android:background="@drawable/shape7"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:layout_margin="8dp"
				android:orientation="horizontal"
				android:layout_weight="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<ImageView
					android:layout_marginStart="10dp"
					android:src="@drawable/abc"
					android:layout_width="80dp"
					android:layout_height="80dp">

				</ImageView>

				<TextView
					android:layout_marginTop="10dp"
					android:layout_marginEnd="20dp"
					android:textSize="20dp"
					android:textColor="#fff"
					android:gravity="right"
					android:textStyle="bold"
					android:text="ENGLISH"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>



			</LinearLayout>

		</LinearLayout>
		<LinearLayout
			android:layout_margin="10dp"
			android:background="@drawable/shape3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:layout_margin="8dp"
				android:orientation="horizontal"
				android:layout_weight="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<ImageView
					android:layout_marginStart="10dp"
					android:src="@drawable/dic"
					android:layout_width="80dp"
					android:layout_height="80dp">

				</ImageView>

				<TextView
					android:layout_marginTop="10dp"
					android:layout_marginEnd="20dp"
					android:textSize="20dp"
					android:textColor="#fff"
					android:gravity="right"
					android:textStyle="bold"
					android:text="DICTIONARY"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>



			</LinearLayout>

		</LinearLayout>
		<LinearLayout
		android:layout_margin="10dp"
		android:background="@drawable/shape2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:layout_margin="8dp"
			android:orientation="horizontal"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<ImageView
				android:layout_marginStart="10dp"
				android:src="@drawable/india"
				android:layout_width="80dp"
				android:layout_height="80dp">

			</ImageView>

			<TextView
				android:layout_marginTop="10dp"
				android:layout_marginEnd="20dp"
				android:textSize="20dp"
				android:textColor="#fff"
				android:gravity="right"
				android:textStyle="bold"
				android:text="OUR INDIA"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>



		</LinearLayout>

	</LinearLayout>
		<LinearLayout
			android:layout_margin="10dp"
			android:background="@drawable/shape9"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:layout_margin="8dp"
				android:orientation="horizontal"
				android:layout_weight="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<ImageView
					android:layout_marginStart="10dp"
					android:src="@drawable/map"
					android:layout_width="80dp"
					android:layout_height="80dp">

				</ImageView>

				<TextView
					android:layout_marginTop="10dp"
					android:layout_marginEnd="20dp"
					android:textSize="20dp"
					android:textColor="#fff"
					android:gravity="right"
					android:textStyle="bold"
					android:text="ATLAS"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>



			</LinearLayout>

		</LinearLayout>
		<LinearLayout
		android:layout_margin="10dp"
		android:background="@drawable/shape4"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:layout_margin="8dp"
			android:orientation="horizontal"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<ImageView
				android:layout_marginStart="10dp"
				android:src="@drawable/gold"
				android:layout_width="80dp"
				android:layout_height="80dp">

			</ImageView>

			<TextView
				android:layout_marginTop="10dp"
				android:layout_marginEnd="20dp"
				android:textSize="20dp"
				android:textColor="#fff"
				android:gravity="right"
				android:textStyle="bold"
				android:text="OLYMPIAD"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>



		</LinearLayout>

	</LinearLayout>



	
	</LinearLayout>


</ScrollView>




	</RelativeLayout>





</LinearLayout>
